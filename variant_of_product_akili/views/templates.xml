<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="products_item" inherit_id="website_sale.products_item">
            <xpath expr="//div[@itemscope='itemscope']/section/h5/strong" position="after"><br/><br/>
                <span t-if="product.product_variant_count>1"> 
                    <p>
                        <b>Variants:</b>
                        <t t-esc="product.product_variant_count"/>
                    </p>
                </span>
            </xpath>
        </template>
    </data>
</odoo>
